    "class-validator": "^0.9.1",
    "config": "^1.31.0",
    "date-fns": "^2.0.0-alpha.11",
    "firebase-admin": "^5.13.1",
    "firestore-simple": "^1.0.1",
    "js-yaml": "^3.12.0",
    "oauth-authorization-header": "^0.0.7",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2"
  },
  "devDependencies": {
    "@types/config": "^0.0.34",
    "@types/jest": "^23.3.0",
    "@types/js-yaml": "^3.11.2",
    "@types/node": "^10.5.3",
    "jest": "^23.4.1",
    "ts-jest": "^23.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "collectCoverage": true,
