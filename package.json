  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=10.5.3"
  },
  "scripts": {
    "test": "NODE_ENV=test jest",
    "dev": "ts-node src/server.ts",
    "build": "tsc"
  },
  "dependencies": {
